generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(cuid())
  name      String
  email     String          @unique
  password  String
  role      Role            @default(EDITOR)
  coverUrl  String? // ✅ NEW: global cover avatar URL
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  sessions  Session[]
  emails    EmailLog[]      @relation("UserEmails")
  templates EmailTemplate[] // ✅ ADD THIS LINE
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
  sessionToken String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Member {
  id       String     @id @default(cuid())
  name     String
  email    String     @unique
  notes    String?
  tier     Tier       @default(BASIC)
  joinedAt DateTime   @default(now())
  emails   EmailLog[] @relation("MemberEmails")
}

enum Tier {
  BASIC
  SILVER
  GOLD
}

model EmailLog {
  id      Int      @id @default(autoincrement())
  to      String
  subject String
  tier    String
  count   Int
  sentAt  DateTime @default(now())

  userId String?
  user   User?   @relation("UserEmails", fields: [userId], references: [id])

  memberId String?
  member   Member? @relation("MemberEmails", fields: [memberId], references: [id])
}

model AppSetting {
  key   String @id
  value String
}

model Cover {
  id       Int    @id @default(1)
  coverUrl String
}

model EmailTemplate {
  id      String @id @default(cuid()) // ✅ Fix added
  userId  String
  name    String
  subject String
  body    String

  // ✅ Campaign engine fields
  templateKey     String  @default("classic")
  bannerUrl       String?
  ctaText         String?
  ctaUrl          String?
  leftImageUrl    String?
  leftImageLabel  String?
  rightImageUrl   String?
  rightImageLabel String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
